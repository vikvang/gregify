{
  "manifest_version": 3,
  "name": "AI Assistant Extension",
  "version": "1.0",
  "description": "AI Assistant Chrome Extension",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' http://localhost:* http://127.0.0.1:*"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "host_permissions": ["http://localhost:8000/*", "http://localhost:5678/*"]
}
