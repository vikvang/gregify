{
  "manifest_version": 3,
  "name": "AI Assistant Extension",
  "version": "1.0",
  "description": "AI Assistant Chrome Extension with ChatGPT autocomplete",
  "action": {
    "default_popup": "noAuthPopup.html",
    "default_width": 400,
    "default_height": 600
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:8000"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"],
      "js": ["basicScript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["basicScript.js"],
      "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"]
    }
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "*://chat.openai.com/*",
    "*://chatgpt.com/*"
  ]
}
